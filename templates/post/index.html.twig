{% extends('base.html.twig') %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <h1>All Questions</h1> <a href="/create">Ask a Question</a>
      <div class="question-container">
            {% for post in posts %}
          
            <div class="question-block">
            <div class="profile-image"></div>
            <div class="question">
            <a class="title" href="{{path('post.show', {id: post.id}) }}">{{ post.title}}</a>
            </div>
             <div class="category">{{ post.category }}</div> 
            <div class="votes">
            <h3>views</h3>
            <h3>votes</h3>
            <h3>anwsers</h3>
            </div>
            <div class="line"></div>
            </div>
            
            {% endfor %}
        </div>
{% endblock %}