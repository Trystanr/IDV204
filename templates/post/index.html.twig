{% extends('base.html.twig') %} {% block body %}
<div class='container'>

    <h1>
        {{ catName }}
    </h1>



    <div id="list-container">
        <div class="question-container">
            {% for post in posts %}

            <div class="question-block">
                <div class="profile-image"></div>
                <div class="question">
                    <a class="title" href="{{path('post.show', {id: post.id}) }}">{{ post.title }}</a> {% if is_granted('ROLE_ADMIN') %}
                    <a class="text-danger" href="{{ path('post.delete', {id: post.id}) }}">
                        X
                    </a> {% endif %}
                </div>

                <div class="category"><a href="{{ path('category_route', {cat: post.category.id}) }}">{{ post.category }}</a></div>

                <div class="votes-container">
                    <div class="votes">
                        <h3>views</h3>
                        <h3>answers</h3>
                    </div>
                    <div class="votes">
                        <h3>{{ post.viewCount }}</h3>
                        <h3>1</h3>
                    </div>
                </div>

                <div class="line"></div>
            </div>

            {% endfor %}
        </div>

        <div class="feature-container">
            <div class="column">
                <div class="cat-container">
                    <a href="{{ path('category_route', {cat: 1}) }}">
                        <img src="{{'/uploads/soccer.png'}}" alt="Symfony" /> Soccer
                    </a>
                </div>
                <div class="cat-container">
                    <a href="{{ path('category_route', {cat: 2}) }}">
                        <img src="{{'/uploads/cricket.png'}}" alt="Symfony" /> Cricket
                    </a>
                </div>
                <div class="cat-container">
                    <a href="{{ path('category_route', {cat: 3}) }}">
                        <img src="{{'/uploads/rugby.png'}}" alt="Symfony" /> Rugby
                    </a>
                </div>
                <div class="cat-container">
                    <a href="{{ path('category_route', {cat: 4}) }}">
                        <img src="{{'/uploads/basketball.png'}}" alt="Symfony" /> Basketball
                    </a>
                </div>
                <div class="cat-container">
                    <a href="{{ path('category_route', {cat: 5}) }}">
                        <img src="{{'/uploads/football.png'}}" alt="Symfony" /> Football
                    </a>
                </div>
            </div>
            <div class="column">
                <div class="cat-container">
                    <a href="{{ path('category_route', {cat: 6}) }}">
                        <img src="{{'/uploads/tennis.png'}}" alt="Symfony" /> Tennis
                    </a>
                </div>
                <div class="cat-container">
                    <a href="{{ path('category_route', {cat: 7}) }}">
