{% extends('base.html.twig') %} {% block body %}
<div class='container'>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
    <h1>
        {{catName}}
    </h1>
    <a href="./create" class="button">Ask a Question</a>

    <div id="list-container">
        <div class="question-container">
            {% for post in posts %}


            <div class="question-block">
                <div class="profile-image"></div>
                <div class="question">
                    <a class="title" href="{{path('post.show', {id: post.id}) }}">{{ post.title}}</a>
                    <a class="text-danger" href="{{ path('post.delete', {id: post.id}) }}">
                        X
                    </a>
                </div>
                
                <div class="category"><a href="{{ path('category_route', {cat: post.category.id}) }}">{{ post.category }}</a></div>

                <div class="votes-container">
                    <div class="votes">
                        <h3>views</h3>
                        <h3>votes</h3>
                        <h3>answers</h3>
                    </div>
                    <div class="votes">
                        <h3>12</h3>
                        <h3>15</h3>
                        <h3>1</h3>
                    </div>
                </div>

                <div class="line"></div>
            </div>

            {% endfor %}
        </div>

        <div class="feature-container">

        </div>
    </div>
</div>
{% endblock %}